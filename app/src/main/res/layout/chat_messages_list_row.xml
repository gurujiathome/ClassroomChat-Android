<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chat_messages_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
        android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/chat_message_sender_avatar_me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_person"
                    android:tint="@color/person_avatar_me" />

                <ImageView
                    android:id="@+id/chat_message_sender_avatar_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_person"
                    android:tint="@color/person_avatar" />
            </RelativeLayout>

            <TextView
        android:id="@+id/chat_message_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sender"
                android:textSize="15sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
        android:id="@+id/chat_message_content"
                android:layout_width="match_parent"
        android:layout_height="wrap_content"
                android:gravity="center_horizontal"
        android:text="hi"
        android:textSize="15sp" />

            <TextView
            android:id="@+id/chat_message_time"
                android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:gravity="right"
            android:text="10:00"
            android:textSize="15sp" />

    </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>